
<MudStack>
    <MudPaper Class="pa-4" Style ="background:#124419">

        <MudButton Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White}; background:{Colors.Grey.Default};")" OnClick="ButtonOnClick">@ReturnToShopping</MudButton>
        <br>
        <br>

        <MudStack>
            <MudPaper Class="pa-4" Style="background:#9A8716;">
                <MudStack Spacing="4">
                    <MudText Align="Align.Right" Style ="@($"color: {Colors.Red.Accent4};")"> *All fields required*</MudText>


                    <MudText Typo="Typo.h6">Shipping Address: </MudText>
                    <MudTextField T="string" Label="Street Address" />
                    <MudStack Row="true">
                        <MudTextField T="string" Label="City" />
                        <MudTextField T="string" Label="State" Mask="@(new PatternMask("aa"))" />
                        <MudTextField T="string" Label="Zip Code" Mask="@(new PatternMask("00000"))" />                        
                    </MudStack>


                    <br><MudText Typo="Typo.h6">Payment Information: </MudText>

                    <MudTextField T="string" Label="Card Number" Mask="@(new PatternMask("0000 0000 0000 0000"))" />
                    <MudStack Row="true">
                        <MudTextField T="string" Label="Expires" Mask="@(new DateMask("MM/YY", 'Y', 'M'))" />
                        <MudTextField T="string" Label="CVC" Mask="@(new PatternMask("000"))" />
                    </MudStack>

                    <br><MudText Typo="Typo.h6">Contact Information: </MudText>
                    <MudTextField T="string" Label="Phone Number" Mask="@(new PatternMask("(000) 000 - 0000"))" />

                    <br><MudText Typo="Typo.h6">Shipping Options: </MudText>
                    <MudGrid>
                        <MudItem xs="12" md="12">
                            <MudCheckBox @bind-Checked="@Option1" Label="Overnight: $29" Color="Color.Default" />
                            <MudCheckBox @bind-Checked="@Option2" Label="3-Day: $19" Color="Color.Default" />
                            <MudCheckBox @bind-Checked="@Option3" Label="Ground: $0 (free)" Color="Color.Default" />
                        </MudItem>
                    </MudGrid>
                </MudStack>    
            </MudPaper>
            
        </MudStack>

        <br>
        <MudStack>
            <MudPaper Class="d-flex align-center flex-grow-1 gap-4" Elevation="0">
            <MudButton Class="py-2 d-flex flex-1" Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White}; background:{Colors.Grey.Default};")" OnClick="ButtonOnClick">@Checkout</MudButton>
            </MudPaper>
        </MudStack>

    </MudPaper>    

</MudStack>


@code {
    public string ReturnToShopping { get; set; } = "Return to Shopping";

    public bool Option1 { get; set; }
    public bool Option2 { get; set; }
    public bool Option3 { get; set; }
    public string Checkout { get; set; } = "Checkout";

    
    void ButtonOnClick() {
        @*
        ButtonClicked += 1;
        Text = $"Awesome x {ButtonClicked}";
        ButtonText = "Click Me Again";
        *@
    }
}