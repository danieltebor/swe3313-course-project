
<MudStack>
    <MudPaper Class="pa-4" Style ="background:#124419">

        <MudButton Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White}; background:{Colors.Grey.Default};")" OnClick="ButtonOnClick">Return to shopping</MudButton>
        <br>
        <br>

        <MudText Typo="Typo.h6" Align="Align.Center" Style ="@($"color: {Colors.Shades.White};")">View Cart</MudText>

        <MudGrid>
            <MudItem xs="6" md="6">
                <MudPaper Width="70%">
                    <MudList Clickable="@Clickable">
                        <MudListItem>
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete" />Item 1
                        </MudListItem>
                        
                        <MudListItem>
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete" />Item 2
                        </MudListItem>

                        <MudListItem>
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete" />Item 3
                        </MudListItem>
                        
                    </MudList>
                </MudPaper>
            </MudItem>
        </MudGrid>


        <br>
        <MudStack>
            <MudPaper Class="pa-4" Style="background:#9A8716;">
                <MudText Align="Align.Center" Style="@($"color:{Colors.Shades.Black};")" Typo="Typo.body1">Subtotal: $0.00</MudText>
            </MudPaper>    
        </MudStack>
        

        <br>
        <MudStack>
            <MudPaper Class="d-flex align-center flex-grow-1 gap-4" Elevation="0">
            <MudButton Class="py-2 d-flex flex-1" Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White}; background:{Colors.Grey.Default};")" OnClick="ButtonOnClick">Pay now</MudButton>
            </MudPaper>
        </MudStack>

    </MudPaper>    

</MudStack>



@code {
    public bool Clickable { get; set; }
    
    void ButtonOnClick() {
        @*
        ButtonClicked += 1;
        Text = $"Awesome x {ButtonClicked}";
        ButtonText = "Click Me Again";
        *@
    }
}