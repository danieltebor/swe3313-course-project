
<MudStack>
    <MudPaper Class="pa-4" Style ="background:#124419">

        <MudButton Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White}; background:{Colors.Grey.Default};")" OnClick="ButtonOnClick">@ReturnToShopping</MudButton>
        <br>
        <br>

        <MudText Typo="Typo.h6" Align="Align.Center" Style ="@($"color: {Colors.Shades.White};")">View Cart</MudText>

        <MudGrid>
            <MudItem xs="12" md="6">
                <MudPaper Width="70%">
                    <MudList Clickable="@Clickable">
                        <MudListItem>
                            Item 1 <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete"></MudIconButton>
                        </MudListItem>
                        
                        <MudListItem>
                            Item 2 <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete"></MudIconButton>
                        </MudListItem>

                        <MudListItem>
                            Item 3 <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete"></MudIconButton>
                        </MudListItem>
                        
                    </MudList>
                </MudPaper>
            </MudItem>
        </MudGrid>


        <br>
        <MudStack>
            <MudPaper Height="40px" Width="40%" Style="background:#9A8716;" Class="d-flex align-center">
                <MudText Align="Align.Center" Typo="Typo.body1">Subtotal: $0.00</MudText>
            </MudPaper>           
        </MudStack>

        <br>
        <MudStack>
            <MudPaper Class="d-flex align-center flex-grow-1 gap-4" Elevation="0">
            <MudButton Class="py-2 d-flex flex-1" Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White}; background:{Colors.Grey.Default};")" OnClick="ButtonOnClick">@PayNow</MudButton>
            </MudPaper>
        </MudStack>

    </MudPaper>    


</MudStack>



@code {
    public string ReturnToShopping { get; set; } = "Return to Shopping";
    public bool Clickable { get; set; }
    public string PayNow { get; set; } = "Pay now";
    
    void ButtonOnClick() {
        @*
        ButtonClicked += 1;
        Text = $"Awesome x {ButtonClicked}";
        ButtonText = "Click Me Again";
        *@
    }
}