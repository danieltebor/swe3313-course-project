@page "/ViewYourItems"

<MudContainer Class="body-container">
    <div class="button-container">
        <MudButton Class="back-to-shopping" @onclick="HandleBackToShopping">
            Back To Shopping
        </MudButton>
    </div>

    <MudPaper Class="article">
        <div class="center-text">
            <h3>Shopping Cart</h3>
        </div>
        <MudSelect Label="Select Item" Class="select" @bind-Value="selectedOption">
            @foreach (var option in Options)
            {
                <MudSelectItem Value="@option">@option</MudSelectItem>
            }
        </MudSelect>
    </MudPaper>

    <MudPaper Class="p1">
        <div class="p2">
            <div class="p3">Subtotal: $0.00</div>
        </div>
    </MudPaper>

    <div class="total-container">
        <div class="button-group">
            <!-- Centered "Pay Now" below the subtotal -->
            <MudButton Class="pay-now" @onclick="HandlePayNow">
                Pay Now
            </MudButton>
        </div>
    </div>
</MudContainer>

