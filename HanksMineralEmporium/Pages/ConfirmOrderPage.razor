    <MudCssBaseline />

    <div class="mudblazor-app">
        <MudContainer>
            <MudRow>
                <MudCol Class="mud-col-spacing">
                    <MudButton Class="back-to-shopping" Variant="Variant.Filled">Back To Shopping</MudButton>
                </MudCol>
                <MudCol Class="mud-col-spacing">
                    <MudButton Class="return-to-payment" Variant="Variant.Filled">Return To Payment</MudButton>
