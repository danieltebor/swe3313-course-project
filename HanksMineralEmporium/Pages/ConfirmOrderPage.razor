<MudContainer>
    <MudButton Class="mud-elevation-2" OnClick="HandleBackToShopping">
        Back To Shopping
    </MudButton>
    
    <MudPaper Class="mud-elevation-6">
        <MudText Typo="Typo.h3">Shopping Cart</MudText>
        <MudSelect Label="Select Item" @bind-Value="selectedOption">
            @foreach (var option in Options)
            {
                <MudSelectItem Value="@option">@option</MudSelectItem>
            }
        </MudSelect>
    </MudPaper>

    <MudPaper Class="mud-elevation-3 mud-p-2">
        <MudText Typo="Typo.h6">Subtotal: $0.00</MudText>
    </MudPaper>

    <MudButton Class="mud-elevation-2" OnClick="HandlePayNow">
        Pay Now
    </MudButton>
</MudContainer>

@code {
    private List<string> Options;
    private string selectedOption;

    protected override void OnInitialized()
    {
        FetchOptions();
    }

    private void FetchOptions()
    {
        // Replace this with your logic to fetch options dynamically
        Options = new List<string> { "Option 1", "Option 2", "Option 3" };
    }

    private void HandlePayNow()
    {
