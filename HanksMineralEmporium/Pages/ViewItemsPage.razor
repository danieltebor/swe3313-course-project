@page "/ViewItemsPage"
<MudContainer Style="height: 100vh; overflow-y: auto;">
    <MudPaper Class="m-4" BackgroundColor="Color.FromRgb(18, 68, 25)">
        <h3 class="text-white text-center">Image Gallery</h3>

        @for (int i = 1; i <= 3; i++)
        {
            <MudPaper Class="m-4">
                <div class="d-flex justify-content-between mb-3">
                    @for (int j = 1; j <= 4; j++)
                    {
                        <div>
                            <img src="image_link_@(i * 4 - 4 + j).jpg" alt="Image @(i * 4 - 4 + j)">
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between mb-3">
                    @for (int j = 1; j <= 4; j++)
                    {
                        <div>
                            <p class="font-weight-bold text-center">Minerals @(i * 4 - 4 + j)</p>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between mb-3">
                    @for (int j = 1; j <= 4; j++)
                    {
                        <div>
                            <p class="text-center">Description @(i * 4 - 4 + j)</p>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between">
                    @for (int j = 1; j <= 4; j++)
                    {
                        <div>
                            <MudButton Class="add-to-cart-button" Color="Color.FromRgb(68, 68, 68)">Add To Cart</MudButton>
                        </div>
                    }
                </div>
            </MudPaper>
        }
    </MudPaper>
</MudContainer>