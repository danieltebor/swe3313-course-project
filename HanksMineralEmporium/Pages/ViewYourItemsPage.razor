@page "/ViewYourItems"

<MudContainer Class="body-container">
    <MudPaper Class="article">
        <div class="center-text">
            <h3>Are you sure you want to purchase?</h3>
        </div>
        <MudSelect Label="Delete mineral" Class="select" @bind-Value="selectedOption">
            @foreach (var option in Options)
            {
                <MudSelectItem Value="@option">@option</MudSelectItem>
            }
        </MudSelect>
    </MudPaper>

    <MudPaper Class="p1">
        <div class="p2">
            Card: **** **** **** 4444<br>
            Subtotal: $0.00<br>
            Tax: $0.00<br>
            Shipping: $0.00<br>
            ____________________ <br>
            <div class="p3">Total: $0.00</div>
        </div>
    </MudPaper>

    <div class="total-and-button-container">
        <div class="total-container">
            <div class="p3">Total: $0.00</div>
        </div>
        
        <MudButton Class="complete-order-bottom" @onclick="HandleCompleteOrder">
            Complete Order
        </MudButton>
    </div>

    <div class="button-container">
        <MudButton Class="back-to-shopping" @onclick="HandleBackToShopping">
            Back To Shopping
        </MudButton>

        <div class="button-group">
            <MudButton Class="return-to-payment" @onclick="HandleReturnToPayment">
                Return To Payment
            </MudButton>
        </div>
    </div>
</MudContainer>

